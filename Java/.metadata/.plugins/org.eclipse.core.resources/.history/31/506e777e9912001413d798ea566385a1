
public class Car {

	public String name;
    public String type;
    public String spefType;
    public String color;
    public int gas;
    public int miles;
	
	public static void print (String text) {
        System.out.println(text);
    }
	
	Car(){
        name = "BMW i8 Roadster";
        type = "car";
        spefType = "coupe";
        color = "black";
        gas = 5000;
        miles = 0;
    }
    
    public void drive(int distance){
        miles = miles + distance;
        
    }
     
    public void eat(int a){
        calories = calories + a;
    }
	
}
